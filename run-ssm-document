---
- hosts: localhost
  #  become: true
  #vars:
    #  ansible_connection: community.aws.aws_ssm
    #ansible_aws_ssm_bucket_name: ansible-git-ssm-deployments
    #ansible_aws_ssm_region: eu-south-1
      #  ansible_connection: 'community.aws.aws_ssm'
  tasks:
    - name: command
      ansible.builtin.shell: hostname
      register: out
    - name: Echo command
      shell:
        cmd: "echo {{ out.stdout_lines }}"
      register: result
    - name: Show result
      debug:
        var: result
    - name: run SSM document AWS-RunPatchBaseline
      command: aws ssm send-command --document-name "AWS-RunPatchBaseline" --targets "Key=tag:awssupport:patchwork,Values=patch" --parameters '{"Operation":["Scan"], "RebootOption":["NoReboot"]}' --comment "Running patch baseline" --region eu-south-1
          # Run the playbook
